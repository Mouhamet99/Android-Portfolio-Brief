    <!--this is the filled layout box for the edit text-->
    <!--this layout must be used to reposition or change
        the height and width of the edit text-->

    <!--sample button to submit entered data
        inside from edit text-->

    <!--text view which previews the entered data by user-->

    <TextView
        android:id="@+id/name_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Name"
        app:layout_constraintStart_toStartOf="@id/who_am_i"
        app:layout_constraintTop_toBottomOf="@+id/email_icon" />


    <EditText
        android:id="@+id/editTextTextUserName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="username"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="@string/placeholder_name"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColor="@color/gray_900"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/name_user_label"
        app:layout_constraintTop_toBottomOf="@+id/name_user_label" />

    <TextView
        android:id="@+id/email_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Email"
        app:layout_constraintStart_toStartOf="@id/name_user_label"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserName" />


    <EditText
        android:id="@+id/editTextTextUserMail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="emailAddress"
        android:background="@drawable/border"
        android:ems="10"
        android:hint="@string/placeholder_email"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColor="@color/gray_900"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/email_user_label"
        app:layout_constraintTop_toBottomOf="@+id/email_user_label" />


    <TextView
        android:id="@+id/message_user_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="Message"
        app:layout_constraintStart_toStartOf="@id/editTextTextUserMail"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserMail" />


    <EditText
        android:id="@+id/editTextTextUserMessage"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginTop="6dp"
        android:layout_marginEnd="16dp"
        android:autofillHints="message"
        android:background="@drawable/border"
        android:ems="10"
        android:gravity="start|top"
        android:hint="@string/placeholder_message"
        android:inputType="textMultiLine"
        android:padding="10dp"
        android:textColor="@color/gray_900"
        android:textCursorDrawable="@null"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/message_user_label"
        app:layout_constraintTop_toBottomOf="@+id/message_user_label" />


    <Button
        android:id="@+id/submit_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Send"
        android:layout_marginTop="18dp"
        android:paddingHorizontal="40dp"
        app:layout_constraintStart_toStartOf="@+id/editTextTextUserMessage"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextUserMessage"
        />

</androidx.constraintlayout.widget.ConstraintLayout>