<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_tech_skills"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="20dp"
    tools:context=".about.techskills.TechSkillsFragment">

    <TextView
        android:id="@+id/tech_skills_subitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tech_skills_subtitle"
        android:textSize="17sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/tech_skills_rv"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tech_skills_subitle"
        app:layout_constraintTop_toBottomOf="@+id/tech_skills_subitle" />

</androidx.constraintlayout.widget.ConstraintLayout>